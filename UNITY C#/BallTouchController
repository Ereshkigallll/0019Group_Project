using UnityEngine;
using NativeWebSocket;
using TMPro;

public class BallTouchController : MonoBehaviour
{
    private WebSocket webSocket;
    public string webSocketServerUrl = "ws://Your WebSocket server address:port";

    async void Start()
    {
        webSocket = new WebSocket(webSocketServerUrl);
        await webSocket.Connect();
    }

    void Update()
    {
        if (Input.touchCount > 0 && Input.GetTouch(0).phase == TouchPhase.Began)
        {
            Ray ray = Camera.main.ScreenPointToRay(Input.GetTouch(0).position);
            RaycastHit hit;

            int layerMask = LayerMask.GetMask("Ball");

            if (Physics.Raycast(ray, out hit, Mathf.Infinity, layerMask) && hit.transform == transform)
            {
                SendTextMeshProContent();
            }
        }
    }

    private async void SendTextMeshProContent()
    {
        TextMeshPro textMesh = GetComponentInChildren<TextMeshPro>();
        if (textMesh != null && webSocket.State == WebSocketState.Open)
        {
            string content = textMesh.text;
            await webSocket.SendText(content);
            Debug.Log("Sent TextMeshPro content to WebSocket server: " + content);
        }
        else
        {
            Debug.LogError("TextMeshPro component is missing or WebSocket is not connected.");
        }
    }

    private async void OnDestroy()
    {
        if (webSocket != null)
        {
            await webSocket.Close();
        }
    }
}
